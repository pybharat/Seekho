<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seekho.live">

    <application
        android:name="com.seekho.live.App.Seekho"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Seekho">
        <activity
            android:name="com.seekho.live.Activities.SplashScreen"
            android:configChanges="orientation|keyboardHidden|uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.seekho.live.Activities.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.RegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.DashboardActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.OTPVerificationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.SubCoursesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.LecturesAndAccompayingMCQActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.SubjectsLectureActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.QuizActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.ResultsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.UpdateProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.UpdatePasswordActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.MockTestsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.WebViewActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.seekho.live.Activities.AllMainCoursesActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden|adjustResize" />

        <!-- ImageCropper -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />

        <!-- FileProvider -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

    <!-- Queries for android 11  -->
    <queries>
        <!-- For YouTube in Android 11 or Above -->
        <intent>
            <action android:name="com.google.android.youtube.api.service.START"/>
        </intent>
        <!-- For Camera -->
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Storage Permission including android 10 or below   -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <!-- Storage Permission for Android 11 or Above -->
<!--    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />-->
    <!-- Camera Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

</manifest>