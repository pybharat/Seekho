<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/cancel_iv"
        android:width="@dimen/size_40sp"
        android:height="@dimen/size_40sp"
        android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners
                android:bottomRightRadius="@dimen/size_6sp"
                android:topRightRadius="@dimen/size_6sp" />
            <padding
                android:bottom="@dimen/size_10sp"
                android:left="@dimen/size_10sp"
                android:right="@dimen/size_10sp"
                android:top="@dimen/size_10sp" />
        </shape>
    </item>

    <item
        android:width="@dimen/size_15sp"
        android:height="@dimen/size_15sp"
        android:drawable="@drawable/cancel_icon"
        android:gravity="center" />

</layer-list>