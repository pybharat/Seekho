<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_1sp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/size_8sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/custom_black"
                    android:textSize="@dimen/medium_text_size" />

                <ImageView
                    android:id="@+id/dismiss_iv"
                    android:layout_width="@dimen/size_20sp"
                    android:layout_height="@dimen/size_20sp"
                    android:src="@drawable/dismiss_icon" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10sp"
                android:text="@string/instructions_text"
                android:textSize="@dimen/small_medium_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10sp"
                android:text="@string/instructions_about_text"
                android:textColor="@color/grey_text"
                android:gravity="center"
                android:padding="@dimen/size_10sp"
                android:textSize="@dimen/extra_small_text_size" />

            <CheckBox
                android:id="@+id/read_verify_cb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10sp"
                android:text="@string/have_read_text"
                android:textColor="@color/custom_black"
                android:buttonTint="@color/navi_blue"
                android:padding="@dimen/size_10sp"
                android:button="@drawable/check_box"
                android:textSize="@dimen/small_text_size"
                android:paddingLeft="@dimen/size_10sp"/>

            <TextView
                android:id="@+id/start_test_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_10sp"
                android:background="@drawable/custom_navi_blue_radius_eight_btn_bg"
                android:paddingLeft="@dimen/size_30sp"
                android:paddingTop="@dimen/size_10sp"
                android:paddingRight="@dimen/size_30sp"
                android:paddingBottom="@dimen/size_10sp"
                android:text="@string/start_test_text"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size">

            </TextView>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>