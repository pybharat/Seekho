<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_5sp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/test_thumb_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150sp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:background="@drawable/no_image" />

            <TextView
                android:id="@+id/test_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_5sp"
                android:paddingBottom="@dimen/size_5sp"
                android:paddingRight="@dimen/size_10sp"
                android:paddingLeft="@dimen/size_10sp"
                android:text="@string/courses_title_text"
                android:textColor="@color/custom_black"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10sp"
                android:paddingTop="@dimen/size_5sp"
                android:paddingRight="@dimen/size_10sp"
                android:paddingBottom="@dimen/size_5sp">

                <TextView
                    android:id="@+id/test_desc_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/mid_grey"
                    android:textSize="@dimen/small_text_size"
                    android:maxLines="4"
                    android:layout_marginRight="@dimen/size_10sp"/>

                <ImageView
                    android:layout_width="@dimen/size_15sp"
                    android:layout_height="@dimen/size_15sp"
                    android:src="@drawable/next_icon"
                    android:layout_gravity="bottom" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>