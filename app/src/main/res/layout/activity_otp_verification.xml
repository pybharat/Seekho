<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">

    <include
        android:id="@+id/toolbar_id"
        layout="@layout/fragment_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_id"
        android:orientation="vertical"
        android:paddingLeft="@dimen/size_60sp"
        android:paddingTop="@dimen/size_15sp"
        android:paddingRight="@dimen/size_60sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20sp"
                android:gravity="center"
                android:text="@string/check_your_given_text"
                android:textColor="@color/custom_black"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/mobile_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/custom_black"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/given_email_text"
                android:textColor="@color/custom_black"
                android:textSize="@dimen/small_text_size" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60sp"
                android:layout_marginTop="@dimen/size_10sp"
                android:layout_marginBottom="@dimen/size_5sp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/size_8sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/size_15sp"
                    android:paddingTop="@dimen/size_10sp"
                    android:paddingRight="@dimen/size_15sp"
                    android:paddingBottom="@dimen/size_10sp">

                    <EditText
                        android:id="@+id/otp_no_1"
                        android:layout_width="@dimen/size_30sp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <EditText
                        android:id="@+id/otp_no_2"
                        android:layout_width="@dimen/size_30sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <EditText
                        android:id="@+id/otp_no_3"
                        android:layout_width="@dimen/size_30sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <EditText
                        android:id="@+id/otp_no_4"
                        android:layout_width="@dimen/size_30sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <EditText
                        android:id="@+id/otp_no_5"
                        android:layout_width="@dimen/size_30sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.5dp"
                        android:layout_marginRight="2.5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/small_medium_text_size" />

                    <EditText
                        android:id="@+id/otp_no_6"
                        android:layout_width="@dimen/size_30sp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="2.5dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/small_medium_text_size" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="@dimen/size_25sp"
                    android:layout_height="@dimen/size_25sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_10sp"
                    android:backgroundTint="@color/navi_blue" />

                <TextView
                    android:id="@+id/duration_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/size_10sp"
                    android:text="@string/otp_sec_text"
                    android:textSize="@dimen/small_text_size" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_10sp"
            android:gravity="center"
            android:text="@string/did_not_rec_otp_text" />

        <TextView
            android:id="@+id/resend_otp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/resend_otp_text"
            android:textColor="@color/light_blue"
            android:textSize="@dimen/small_medium_text_size" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/otp_verified_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lime_green"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/size_50sp"
        android:paddingRight="@dimen/size_50sp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/verified_iv"
                android:layout_width="@dimen/size_190sp"
                android:layout_height="@dimen/size_190sp"
                android:background="@drawable/bg_otp_verified_oval_and_white_check_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20sp"
                android:gravity="center"
                android:text="@string/otp_verified_text"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>