<!--                <EditText-->
<!--                    android:id="@+id/old_pass_et"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="@dimen/size_50sp"-->
<!--                    android:background="@drawable/bg_white_radius_eight"-->
<!--                    android:hint="@string/old_pass_text"-->
