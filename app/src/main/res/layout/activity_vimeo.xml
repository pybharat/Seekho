<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VimeoActivity">




    <androidx.cardview.widget.CardView
        android:id="@+id/exo"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/size_8sp"
        android:layout_margin="@dimen/size_1sp"
        >

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/exo_pl"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:controller_layout_id="@layout/exo_playback_control_view"
            />
    </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="@dimen/size_15sp">


                <io.github.kexanie.library.MathView
                    android:id="@+id/desc_wv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10sp"
                    android:gravity="start"
                    app:engine="MathJax"
                    android:textColor="@color/grey_text"
                    android:textSize="@dimen/small_text_size"
                    android:visibility="visible"/>


            </LinearLayout>



    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/bg_progress"
        android:visibility="gone" />
</RelativeLayout>