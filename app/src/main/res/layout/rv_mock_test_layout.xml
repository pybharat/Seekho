<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_5sp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:layout_marginBottom="@dimen/size_1sp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/size_8sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_10sp">

            <TextView
                android:id="@+id/mock_test_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_left_right_corner_8dp_navi_blue"
                android:gravity="center"
                android:paddingTop="@dimen/size_8sp"
                android:paddingBottom="@dimen/size_8sp"
                android:paddingLeft="@dimen/size_5sp"
                android:paddingRight="@dimen/size_5sp"
                android:text="@string/zero_text"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/size_10sp"
                android:paddingTop="@dimen/size_15sp"
                android:paddingRight="@dimen/size_10sp"
                android:paddingBottom="@dimen/size_15sp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5sp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/mock_test_total_que_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_oval_stroke_03_black"
                        android:gravity="center"
                        android:text="@string/marks_180_text"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mock_test_total_que_tv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_5sp"
                        android:gravity="center"
                        android:text="@string/questions_text"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/extra_small_text_size" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5sp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/mock_test_duration_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_oval_stroke_03_black"
                        android:gravity="center"
                        android:text="@string/marks_180_text"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/medium_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mock_test_duration_tv"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/size_5sp"
                        android:gravity="center"
                        android:text="@string/minutes_text"
                        android:textColor="@color/custom_black"
                        android:textSize="@dimen/extra_small_text_size" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/start_test_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_navi_blue_radius_eight_btn_bg"
                android:paddingLeft="@dimen/size_25sp"
                android:paddingTop="@dimen/size_8sp"
                android:paddingRight="@dimen/size_25sp"
                android:paddingBottom="@dimen/size_8sp"
                android:text="@string/start_test_text"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>