<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_1sp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/size_8sp">

        <LinearLayout
            android:id="@+id/before_enroll_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_10sp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/course_name_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_medium_text_size" />

                <ImageView
                    android:id="@+id/dismiss_iv"
                    android:layout_width="@dimen/size_20sp"
                    android:layout_height="@dimen/size_20sp"
                    android:src="@drawable/dismiss_icon" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_20sp"
                android:layout_marginLeft="@dimen/size_20sp"
                android:layout_marginTop="@dimen/size_20sp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/size_10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_10sp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="@string/price_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="\u20B9 0/-"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_10sp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="@string/discount_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="100%"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/size_10sp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:text="@string/total_payable_amount_text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:text="\u20B9 0/-"
                            android:textColor="@color/black"
                            android:textSize="@dimen/small_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_10sp"
                android:gravity="center"
                android:text="@string/discount_with_offer_text"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_15sp"
                android:gravity="center"
                android:text="@string/note_terms_and_conditions_text"
                android:textColor="@color/grey_text"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/enroll_now_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_20sp"
                android:background="@drawable/custom_navi_blue_radius_eight_btn_bg"
                android:paddingLeft="@dimen/size_50sp"
                android:paddingTop="@dimen/size_10sp"
                android:paddingRight="@dimen/size_50sp"
                android:paddingBottom="@dimen/size_10sp"
                android:text="@string/enroll_text"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/enrolled_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size_20sp"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/size_120sp"
                android:layout_height="@dimen/size_120sp"
                android:src="@drawable/check_green_icon" />

            <TextView
                android:id="@+id/successful_enroll_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15sp"
                android:gravity="center"
                android:text="You Successfully Enrolled NEET Now"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/enroll_alert_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size_20sp"
            android:visibility="gone">

            <TextView
                android:id="@+id/enroll_alert_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10sp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/size_120sp"
                android:layout_height="@dimen/size_120sp"
                android:src="@drawable/warning_icon"
                android:layout_marginTop="@dimen/size_15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15sp"
                android:gravity="center"
                android:text="You Need to Enroll This Course First"
                android:textColor="@color/black"
                android:textSize="@dimen/small_medium_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/enroll_alert_go_back_btn_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_20sp"
                android:background="@drawable/custom_navi_blue_radius_eight_btn_bg"
                android:paddingLeft="@dimen/size_50sp"
                android:paddingTop="@dimen/size_10sp"
                android:paddingRight="@dimen/size_50sp"
                android:paddingBottom="@dimen/size_10sp"
                android:text="@string/go_back_text"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>